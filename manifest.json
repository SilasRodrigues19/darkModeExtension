{
  "manifest_version": 1,
  "name": "Dark Mode Switcher",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./assets/js/content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./assets/img/logo-16.png",
      "48": "./assets/img/logo-48.png",
      "128": "./assets/img/logo-128.png"
    }
  }
}